-------------------FACTORIAL WHILE LOOP-------------------------------
/* FACTORIAL
#include<iostream>
using namespace std;
int main()
{
	int n,j=1,i=1;
	cout<<"Enter The Number: ";
	cin>>n;
	while(i<=n)
	{
		j=j*i;
		i++;
	}
	cout<<"The Factorial of "<<n<<" is "<<j;
	
------------------FOR LOOP TABLE-------------------------------------
//FOR LOOP TABLE
    #include <iostream>
    using namespace std;
    int main()
    {
    int y;
    cout<< "Enter a number you want the table of: " << endl;
    cin >> y;
    for (int x = 0; x <= 10; x++)
    {
    cout << y << " x " << x << " = " << y * x << endl;
    }
    }
    }
------------------------WHILE LOOP TABLE-------------------------------
//WHILE LOOP TABLE
#include <iostream>
using namespace std;
int main()
{
int x = 0;
int y;
	cout<< "Enter a number you want the table of: " << endl;
	cin >> y;
	while ( x < 10)
	{
	    x++;
		cout << y << " x " << x << " = " << y * x << endl;
	}
}

-------------FOR LOOP TABLE WITH WITH USER DECIDING WHEN THE TABLE WILL END-----------------
//FOR LOOP TABLE WITH WITH USER DECIDING WHEN THE TABLE WILL END
#include <iostream>
using namespace std;
int main()
{
int y;
int z;
	cout<< "Enter a number you want the table of: ";
	cin >> y;
	cout<< "Enter a number you want the table to end : ";
	cin >> z;
	for (int x = 0; x <= z; x++)
	{
		cout << y << " x " << x << " = " << y * x << endl;
	}
}

-----------------------FOR LOOP DIVISIBLE BY 9-------------------------------------
//FOR LOOP DIVISIBLE BY 9
#include <iostream>
#include <string>
using namespace std;
int main()
{
	int x = 0;
	do
	{
	    x++;
		if (x % 9 == 0)
		{
			cout << x << " - Divisible by 9 \n";
			}
			else{
			 cout << x << " - not divisible by 9 \n";   
			}
	}
	while (x < 200);
	cout << endl;
}
