			cout << "*";
			j++;
		}
		cout << endl;
		i--;
	}
	int k = 0;
	while (k < 5) {
		int l = 0;
		while (l <= k) {
			cout << "*";
			l++;
		}
		cout << endl;
		k++;
	}
}
